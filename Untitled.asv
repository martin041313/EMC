%load rgb image
src = 'lena.jpg';
rgbI = imread(src);

rgbI = dou
%convert to lab
labTransformation = makecform('srgb2lab');
labI = applycform(rgbI,labTransformation);

%seperate l,a,b
l = labI(:,:,1);
a = labI(:,:,2);
b = labI(:,:,3);

%figure, imshow(l) , title('l');
%figure, imshow(a) , title('a');
%figure, imshow(b) , title('b');

labt = RGB2Lab(rgbI);
lt = labt(:,:,1);
figure, imshow(lt) , title('lt');
